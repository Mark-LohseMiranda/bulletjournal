<!-- Modal for template options for new page -->

<div id="modal" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <h2 class="uk-modal-title">Let's add a new note! What would you like included?</h2>
        <form id="noteCreate">
            <label><input class="uk-checkbox" type="checkbox" name="checkbox1" id='addSchedule'>Scheduler</label><br>
            <label><input class="uk-checkbox" type="checkbox" name="checkbox2" id='addToDo'>To Do List</label><br>
            <label><input class="uk-checkbox" type="checkbox" name="checkbox3" id='addInspo'>Inspirational
                Quote</label><br>
            <label><input class="uk-checkbox" type="checkbox" name="checkbox4" id='addDump'>Brain Dump</label><br>
            <label><input class="uk-checkbox" type="checkbox" name="checkbox5" id='addGoal'>Goals</label><br>
            <label><input class="uk-checkbox" type="checkbox" name="checkbox6" id='addPostit'>Post It Note</label><br>
            <p class="uk-text-right">
                <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
                <button class="uk-button uk-button-primary" type="submit" id='confirmPageAdd'>Continue</button>
            </p>
        </form>
    </div>
</div>

{{!-- theme switcher options modal --}}
<div id="theme-modal" uk-modal>
    <div class="uk-modal-dialog uk-modal-body uk-text-center">
        <h2 class="uk-modal-title uk-align-center">Themes</h2>
        <div class='uk-flex uk-flex-around'>
            <label><span class="uk-icon uk-icon-image"

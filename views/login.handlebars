<h1 class="uk-animation-slide-top" style="text-align: center;">Log in</h1>
<h3 class="uk-animation-slide-bottom" style="text-align: center;">We're happy to have you back</h3>

<form style="display: flex; justify-content: center;" class = "login-form">
    <div>
        <div class="uk-block">
            <div class="uk-inline" style="margin-top: 5px;">
                <span class="uk-form-icon" uk-icon="icon: mail"></span>
                <input class="uk-input" type="email" placeholder="email" id="email">
            </div>
        </div>
        <div class="uk-block">
            <div class="uk-inline" style="margin-top: 5px;">
                <span class="uk-form-icon uk-form-icon" uk-icon="icon: lock"></span>
                <input class="uk-input" type="password" placeholder="password" id="password">
            </div>
        </div>
        <button class="submit uk-button uk-button-primary uk-width-1 uk-margin-small-bottom" style="margin-top: 5px;">Log in</button>
    </div>
</form>

<script src="/js/login.js" defer></script>